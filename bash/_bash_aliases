function cc () {
  local CHROME=google-chrome
  if [ ! -z "$1" ]; then
    local PROFILE_DIR=$1
    local CHROME_ARGS="--user-data-dir=/home/grota/.config/${CHROME}_others/$PROFILE_DIR"
  fi
  echo "Running: " "$CHROME" "$CHROME_ARGS"
  $CHROME $CHROME_ARGS &> /dev/null &
}
