function! DeleteEmptyBuffers()
    let [i, n; empty] = [1, bufnr('$')]
    while i <= n
        if bufexists(i) && bufname(i) == ''
            call add(empty, i)
        endif
        let i += 1
    endwhile
    if len(empty) > 0
        exe 'bwipe' join(empty)
    endif
endfunction
command GrotaWipeEmptyBuffers call DeleteEmptyBuffers()
